<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controlador.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>controlador.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministradorProducto</servlet-name>
        <servlet-class>controlador.AdministradorProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministradorProductoCrear</servlet-name>
        <servlet-class>controlador.AdministradorProductoCrear</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdministradorUsuarioCrear</servlet-name>
        <servlet-class>controlador.AdministradorUsuarioCrear</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministradorProducto</servlet-name>
        <url-pattern>/administradorProducto.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministradorProductoCrear</servlet-name>
        <url-pattern>/administradorProductoCrear.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdministradorUsuarioCrear</servlet-name>
        <url-pattern>/administradorUsuarioCrear.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
